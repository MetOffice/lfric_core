! Test the single_to_multi_kernel

module single_to_multi_kernel_mod_test

  use constants_mod, only : r_def, i_def
  use pFUnit_Mod

  implicit none

  private
  public:: test_of_single_to_multi

  @TestCase
  type, extends(MPITestCase), public :: single_to_multi_test_type
    private
    real(r_def), allocatable ::              &
      multi_field(:), answer_multi_field(:), &
      single_field(:)

  contains
    procedure setUp
    procedure tearDown
    procedure test_of_single_to_multi
  end type single_to_multi_test_type

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine setUp( this )

    implicit none

    class(single_to_multi_test_type), intent(inout) :: this

    integer(kind=i_def) :: undf_multi
    integer(kind=i_def) :: undf_2d

    undf_multi = 11_i_def
    undf_2d    = 1_i_def

    allocate( this%multi_field(undf_multi) )
    allocate( this%answer_multi_field(undf_multi) )
    allocate( this%single_field(undf_2d) )


  end subroutine setUp

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine tearDown( this )

    implicit none

    class(single_to_multi_test_type), intent(inout) :: this

    deallocate( this%multi_field, this%answer_multi_field, &
                this%single_field)

  end subroutine tearDown

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @Test( npes=[1] )
  subroutine test_of_single_to_multi( this )

    use single_to_multi_kernel_mod, only : single_to_multi_code

    implicit none

    class(single_to_multi_test_type), intent(inout) :: this

    real(kind=r_def), parameter :: tol = 1.0e-14_r_def

    integer(kind=i_def) :: n_multi, nlayers, i

    integer(kind=i_def)              :: ndf_multi, undf_multi
    integer(kind=i_def), allocatable :: map_multi(:)
    integer(kind=i_def)              :: ndf_2d, undf_2d
    integer(kind=i_def), allocatable :: map_2d(:)

    n_multi = 11_i_def

    ndf_multi  = n_multi
    undf_multi = n_multi
    allocate(map_multi(ndf_multi))
    do i=1_i_def, ndf_multi
      map_multi(i) = i
    end do

    ndf_2d  = 1_i_def
    undf_2d = 1_i_def
    allocate(map_2d(ndf_2d))
    do i=1_i_def, ndf_2d
      map_2d(i) = i
    end do

    ! Set correct answers
    this%answer_multi_field(:)            = 0.0_r_def
    this%answer_multi_field(map_multi(8)) = 1.0_r_def

    ! Set input data
    this%multi_field(:)  = 0.0_r_def
    this%single_field(:) = 1.0_r_def

    call single_to_multi_code(nlayers,                        &
                            this%multi_field(:),              &
                            this%single_field(:),             &
                            8,                                &
                            ndf_multi, undf_multi, map_multi, &
                            ndf_2d, undf_2d, map_2d )

    @assertEqual( this%answer_multi_field(:), this%multi_field(:), tol )

  end subroutine test_of_single_to_multi

end module single_to_multi_kernel_mod_test
